<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout" height="100%">
	<f:DynamicPage id="dynamicPage" class="sapUiContentPaddig" preserveHeaderStateOnScroll="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Film Simulation Library" level="H1"/>
				</f:heading>
				<f:snappedTitleOnMobile>
					<Title text="Film Simulation Library" level="H2"/>
				</f:snappedTitleOnMobile>
				<f:actions>
					<Button text="Create" type="Emphasized" icon="sap-icon://add" press="onOpenDialog"/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:content>
			<layout:VerticalLayout id="mainContent" width="100%"> </layout:VerticalLayout>
		</f:content>
	</f:DynamicPage>
</mvc:View>
